# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/hamlet_db?schema=public"

# Server
PORT=4001
NODE_ENV=development

# CORS - Add your frontend URLs
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,https://amlet-unified.vercel.app"

# Authentication (if implementing)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
NEXTAUTH_SECRET="your-nextauth-secret-change-this"
NEXTAUTH_URL="http://localhost:3000"

# External APIs (optional - for future features)
GOOGLE_GEMINI_API_KEY=""
OPENAI_API_KEY=""

# Logging
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
