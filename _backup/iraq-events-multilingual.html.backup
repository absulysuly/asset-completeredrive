            // Language switching functionality
            const langButtons = document.querySelectorAll('.lang-btn');
            const body = document.body;
            let currentLang = 'en';
            
            langButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const lang = this.getAttribute('data-lang');
                    currentLang = lang;
                    
                    // Update active button
                    langButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Update direction for RTL languages
                    if (lang === 'ar' || lang === 'ku') {
                        body.classList.add('rtl');
                        document.documentElement.dir = 'rtl';
                    } else {
                        body.classList.remove('rtl');
                        document.documentElement.dir = 'ltr';
                    }
                    
                    // Update all text content
                    updateContent(lang);
                });
            });
            
            // Update content based on selected language
            function updateContent(lang) {
                const t = translations[lang];
                
                // Update navigation and hero section
                document.querySelector('.logo-text').textContent = t.logoText;
                document.querySelector('.hero-title').textContent = t.heroTitle;
                document.querySelector('.hero-desc').textContent = t.heroDesc;
                document.querySelector('.login-btn').innerHTML = `<i class="fas fa-sign-in-alt"></i> ${t.login}`;
                document.querySelector('.create-event-btn').innerHTML = `<i class="fas fa-plus-circle"></i> ${t.createEvent}`;
                document.querySelector('.upcoming-events-title').innerHTML = `<i class="fas fa-star"></i> ${t.upcomingEvents}`;
                
                // Update filter buttons
                const filterButtons = document.querySelectorAll('.filter-btn');
                filterButtons.forEach((button, index) => {
                    const iconClass = button.querySelector('i').className;
                    button.innerHTML = `<i class="${iconClass}"></i> ${t.filters[index]}`;
                });
                
                // Update month buttons
                const monthButtons = document.querySelectorAll('.month-btn');
                monthButtons.forEach((button, index) => {
                    button.textContent = t.months[index];
                });
                
                // Update event cards
                const eventTitles = document.querySelectorAll('.event-title');
                const eventDescriptions = document.querySelectorAll('.event-desc');
                
                eventTitles.forEach((title, index) => {
                    if (t.eventTitles[index]) {
                        title.textContent = t.eventTitles[index];
                    }
                });
                
                eventDescriptions.forEach((desc, index) => {
                    if (t.eventDescriptions[index]) {
                        desc.textContent = t.eventDescriptions[index];
                    }
                });
                
                // Update footer
                const footerSections = document.querySelectorAll('.footer-section h3');
                if (footerSections[0]) footerSections[0].textContent = t.about;
                if (footerSections[1]) footerSections[1].textContent = t.contact;
                if (footerSections[2]) footerSections[2].textContent = t.ourCities;
                
                document.querySelector('.copyright p').textContent = t.copyright;
            }
            
            // Modal functionality
            const loginBtn = document.querySelector('.login-btn');
            const createEventBtn = document.querySelector('.create-event-btn');
            const loginModal = document.getElementById('login-modal');
            const createEventModal = document.getElementById('create-event-modal');
            const closeButtons = document.querySelectorAll('.close-modal');
            
            loginBtn.addEventListener('click', function(e) {
                e.preventDefault();
                loginModal.style.display = 'flex';
            });
            
            createEventBtn.addEventListener('click', function(e) {
                e.preventDefault();
                createEventModal.style.display = 'flex';
            });
            
            closeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    loginModal.style.display = 'none';
                    createEventModal.style.display = 'none';
                });
            });
            
            // Close modal when clicking outside
            window.addEventListener('click', function(e) {
                if (e.target === loginModal) {
                    loginModal.style.display = 'none';
                }
                if (e.target === createEventModal) {
                    createEventModal.style.display = 'none';
                }
            });
            
            // Filter functionality
            const filterButtons = document.querySelectorAll('.filter-btn');
            const eventCards = document.querySelectorAll('.event-card');
            
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Update active filter
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    const filterValue = this.getAttribute('data-filter');
                    
                    eventCards.forEach(card => {
                        if (filterValue === 'all' || card.getAttribute('data-category') === filterValue) {
                            card.style.display = 'block';
                            card.classList.add('slide-in');
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            });
            
            // Month filter functionality
            const monthButtons = document.querySelectorAll('.month-btn');
            monthButtons.forEach(button => {
                button.addEventListener('click', function() {
                    monthButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // In a real application, you would filter events by month here
                    console.log('Filter by month:', this.getAttribute('data-month'));
                });
            });
            
            // Event card click functionality
            eventCards.forEach(card => {
                card.addEventListener('click', function() {
                    const title = this.querySelector('.event-title').textContent;
                    alert(`Event details for: ${title}\n\nIn a real application, this would show detailed event information, ticket booking options, and more.`);
                });
            });
            
            // Image upload functionality
            const uploadBtn = document.querySelector('.upload-btn');
            const fileInput = document.getElementById('event-image');
            
            if (uploadBtn && fileInput) {
                uploadBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    fileInput.click();
                });
                
                fileInput.addEventListener('change', function() {
                    if (this.files && this.files[0]) {
                        const fileName = this.files[0].name;
                        uploadBtn.querySelector('span').textContent = fileName;
                    }
                });
            }
            
            // Form submission handling
            const forms = document.querySelectorAll('.event-form');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const isLogin = this.closest('#login-modal');
                    if (isLogin) {
                        alert('Login functionality would be implemented here with proper authentication.');
                    } else {
                        alert('Event creation functionality would be implemented here with backend integration.');
                    }
                });
            });
            
            // Add animation delays to event cards
            eventCards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
            
            // Intersection Observer for scroll animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('slide-in');
                    }
                });
            }, observerOptions);
            
            // Observe all event cards
            eventCards.forEach(card => {
                observer.observe(card);
            });
            
            // Add price styling
            const priceElements = document.querySelectorAll('.event-price .price');
            priceElements.forEach(price => {
                if (price.textContent.includes('FREE')) {
                    price.classList.add('free');
                    price.style.color = '#4CAF50';
                    price.style.fontWeight = 'bold';
                } else {
                    price.style.color = '#2196F3';
                    price.style.fontWeight = '600';
                }
            });
            
            // Add category tag styling
            const categoryTags = document.querySelectorAll('.category-tag');
            categoryTags.forEach(tag => {
                const category = tag.className.split(' ')[1];
                tag.style.fontSize = '12px';
                tag.style.padding = '4px 8px';
                tag.style.borderRadius = '12px';
                tag.style.fontWeight = '600';
                tag.style.textTransform = 'uppercase';
                tag.style.letterSpacing = '0.5px';
                
                switch(category) {
                    case 'music':
                        tag.style.backgroundColor = '#E91E63';
                        tag.style.color = 'white';
                        break;
                    case 'sports':
                        tag.style.backgroundColor = '#4CAF50';
                        tag.style.color = 'white';
                        break;
                    case 'culture':
                        tag.style.backgroundColor = '#FF9800';
                        tag.style.color = 'white';
                        break;
                    case 'tech':
                        tag.style.backgroundColor = '#2196F3';
                        tag.style.color = 'white';
                        break;
                    case 'food':
                        tag.style.backgroundColor = '#FF5722';
                        tag.style.color = 'white';
                        break;
                    case 'art':
                        tag.style.backgroundColor = '#9C27B0';
                        tag.style.color = 'white';
                        break;
                }
            });
        });
    </script>
</body>
